{
  "compilerOptions": {
    "module": "es6",
    "target": "es2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "Node",
  },
  "exclude": [
    "node_modules",
  ]
}
